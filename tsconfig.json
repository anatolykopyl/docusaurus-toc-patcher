{
  "compilerOptions": {
    /* Emit */
    "target": "ES2020",
    "lib": ["ESNext"],
    "declaration": true,
//    "importHelpers": true,
    "noEmitHelpers": true,
    // Will be overridden in client projects
    "module": "NodeNext",
    "noEmit": false,
    "incremental": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo",
    "sourceMap": true,
    "declarationMap": true,
    "rootDir": "src",
    "outDir": "lib",
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["**/__tests__/**"]
}
